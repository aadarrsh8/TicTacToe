<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:background="@drawable/mainbg" tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <GridLayout android:background="@drawable/board" android:layout_height="360sp" android:layout_width="match_parent" android:rowCount="3" android:columnCount="3" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:id="@+id/gridLayout">

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="0" android:layout_marginLeft="20sp" android:onClick="dropIn" android:layout_column="0" android:layout_row="0"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="1" android:layout_marginLeft="30sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="1" android:layout_row="0"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="2" android:layout_marginLeft="10sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="2" android:layout_row="0"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="3" android:layout_marginLeft="20sp" android:onClick="dropIn" android:layout_column="0" android:layout_row="1" android:layout_marginTop="40sp"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="4" android:layout_marginLeft="30sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="1" android:layout_row="1" android:layout_marginTop="40sp"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="5" android:layout_marginLeft="10sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="2" android:layout_row="1" android:layout_marginTop="40sp"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="6" android:layout_marginLeft="20sp" android:onClick="dropIn" android:layout_column="0" android:layout_row="2" android:layout_marginTop="40sp"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="7" android:layout_marginLeft="30sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="1" android:layout_row="2" android:layout_marginTop="40sp"/>

    <ImageView android:layout_height="90sp" android:layout_width="90sp" android:tag="8" android:layout_marginLeft="10sp" android:layout_marginRight="20sp" android:onClick="dropIn" android:layout_column="2" android:layout_row="2" android:layout_marginTop="45sp"/>

</GridLayout>


    <LinearLayout android:background="@drawable/bg1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/playAgainLayout" android:layout_marginTop="300sp" android:visibility="invisible" android:padding="30sp" android:orientation="vertical" android:layout_centerInParent="true">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/winnerMessage" android:layout_marginTop="75sp" android:textSize="30sp" android:text="New Text" android:layout_gravity="center_horizontal"/>

    <Button android:background="#60DD57" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/playAgainButton" android:onClick="playAgain" android:layout_marginTop="35sp" android:padding="10sp" android:text="Play Again" android:layout_gravity="center_horizontal"/>

</LinearLayout>

</RelativeLayout>